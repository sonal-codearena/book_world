<div class="container" style="margin-top: 8%;">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" src="<%= @book.image_url %>" alt="">
    </div>
    <div class="col-md-8">
      <h3 class="my-3"><%= @book.name %></h3>
      <p><%= @book.description %></p>
      <h3 class="my-3">Author Information</h3>
      <ul>
        <li>Name: <%= @book.author %></li>
      </ul>
    </div>
  </div>
</div>
